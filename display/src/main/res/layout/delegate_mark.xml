<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.LinearLayoutCompat
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"

    android:layout_height="match_parent"
    android:background="@drawable/normal_back"
    android:orientation="vertical">


    <android.support.v7.widget.LinearLayoutCompat
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:baselineAligned="true">
        <!--左侧靶面-->
        <FrameLayout
            android:id="@+id/target_map_container"
            android:layout_width="0dp"
            android:background="@drawable/left_frame"
            android:layout_height="match_parent"
            android:layout_weight="9"
            >
            <com.huasun.display.main.mark.view.MarkDisplay
                android:layout_height="match_parent"
                android:layout_width="match_parent"
                android:layout_margin="5px"
                android:layout_gravity="center_horizontal"
                android:id="@+id/surface_pan"
                >
            </com.huasun.display.main.mark.view.MarkDisplay>
        </FrameLayout>
        <!--右侧数据部分-->
        <android.support.v7.widget.LinearLayoutCompat
            android:layout_width="0dp"
            android:layout_weight="3"
            android:layout_marginLeft="@dimen/dp_5"

            android:orientation="vertical"
            android:layout_height="match_parent">
            <!--右侧列表-->
            <android.support.v7.widget.LinearLayoutCompat
                android:id="@+id/llc_person_data"
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:layout_height="match_parent"
                >
                    <!--右侧grid部分-->
                    <android.support.v7.widget.LinearLayoutCompat
                        android:orientation="horizontal"
                        android:background="@drawable/right_frame_up"
                        android:layout_width="match_parent"

                        android:layout_height="0dp"
                        android:layout_weight="1">
                            <android.support.v7.widget.LinearLayoutCompat
                                android:layout_width="0dp"
                                android:layout_weight="5"
                                android:layout_height="wrap_content"
                                android:orientation="vertical">
                            <!--姓名一行-->
                                <android.support.v7.widget.LinearLayoutCompat
                                    android:layout_width="match_parent"
                                    android:layout_height="0dp"
                                    android:layout_weight="1"
                                    android:layout_marginTop="@dimen/dp_5"
                                    android:layout_marginLeft="@dimen/dp_5"
                                    android:layout_marginRight="@dimen/dp_5"

                                    android:orientation="horizontal">

                                    <TextView
                                        android:layout_marginRight="@dimen/dp_5"
                                        android:layout_width="wrap_content"
                                        android:textColor="@color/white"
                                        android:textStyle="bold"
                                        android:textSize="@dimen/sp_28"
                                        android:layout_height="wrap_content"
                                        android:text="姓名:"
                                        />
                                    <EditText
                                        android:textStyle="bold"
                                        android:layout_width="wrap_content"
                                        android:id="@+id/edit_name"
                                        android:textColor="@color/lightgreen"
                                        android:background="@null"
                                        android:textSize="@dimen/sp_28"
                                        android:layout_height="wrap_content" />
                                </android.support.v7.widget.LinearLayoutCompat>
                                <!--靶位一行-->
                                <android.support.v7.widget.LinearLayoutCompat
                                    android:layout_width="match_parent"
                                    android:layout_height="0dp"
                                    android:layout_weight="1"
                                    android:layout_marginTop="@dimen/dp_5"
                                    android:layout_marginLeft="@dimen/dp_5"
                                    android:layout_marginRight="@dimen/dp_5"
                                    android:orientation="horizontal">
                                        <TextView
                                            android:textStyle="bold"
                                            android:layout_width="wrap_content"
                                            android:layout_marginRight="@dimen/dp_5"
                                            android:textColor="@color/white"
                                            android:textSize="@dimen/sp_28"
                                            android:layout_height="wrap_content"
                                            android:text="组号:"
                                            />
                                        <EditText
                                            android:textStyle="bold"
                                            android:layout_width="0dp"
                                            android:layout_weight="1"
                                            android:background="@null"
                                            android:textColor="@color/lightgreen"
                                            android:id="@+id/edit_group_number"
                                            android:textSize="@dimen/sp_28"
                                            android:layout_height="wrap_content" />
                                </android.support.v7.widget.LinearLayoutCompat>

                                <!--枪械一行-->
                                <android.support.v7.widget.LinearLayoutCompat
                                    android:layout_width="match_parent"
                                    android:layout_height="0dp"
                                    android:layout_weight="1"
                                    android:layout_marginTop="@dimen/dp_5"
                                    android:layout_marginBottom="@dimen/dp_5"
                                    android:layout_marginLeft="@dimen/dp_5"
                                    android:layout_marginRight="@dimen/dp_5"
                                    android:orientation="horizontal">

                                        <TextView
                                            android:textStyle="bold"
                                            android:layout_width="wrap_content"
                                            android:layout_marginRight="@dimen/dp_5"
                                            android:textColor="@color/white"
                                            android:textSize="@dimen/sp_28"
                                            android:layout_height="wrap_content"
                                            android:text="弹数:"
                                            />
                                        <EditText
                                            android:textStyle="bold"
                                            android:layout_width="0dp"
                                            android:layout_weight="1.5"
                                            android:id="@+id/edit_bullet"
                                            android:background="@null"
                                            android:textColor="@color/lightgreen"
                                            android:textSize="@dimen/sp_28"
                                            android:layout_height="wrap_content" />
                                </android.support.v7.widget.LinearLayoutCompat>
                            </android.support.v7.widget.LinearLayoutCompat>
                            <android.support.v7.widget.LinearLayoutCompat
                                android:layout_width="0dp"
                                android:layout_weight="2"
                                android:layout_marginTop="@dimen/dp_5"
                                android:layout_marginBottom="@dimen/dp_5"
                                android:orientation="vertical"
                                android:layout_height="wrap_content">
                                <TextView
                                    android:textStyle="bold"
                                    android:layout_width="wrap_content"
                                    android:textColor="@color/white"
                                    android:textSize="@dimen/sp_28"
                                      android:layout_gravity="center"
                                    android:layout_marginRight="@dimen/dp_5"
                                    android:layout_height="wrap_content"
                                    android:text="靶位"
                                    />
                                <EditText
                                    android:textStyle="bold"
                                    android:gravity="center"
                                    android:layout_width="@dimen/dp_60"
                                    android:layout_height="@dimen/dp_64"

                                    android:background="@drawable/circle_bg"
                                    android:textColor="@color/lightgreen"
                                    android:id="@+id/edit_target_number"
                                    android:textSize="@dimen/sp_48"
                                    />

                            </android.support.v7.widget.LinearLayoutCompat>
                    </android.support.v7.widget.LinearLayoutCompat>


                     <!--recyclerview -->
                    <android.support.v7.widget.LinearLayoutCompat
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="4"
                        android:background="@drawable/right_frame_below"
                        android:layout_marginTop="@dimen/dp_5"
                        android:orientation="vertical">
                        <android.support.v7.widget.LinearLayoutCompat
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/dp_5"
                            android:layout_marginBottom="@dimen/dp_5"
                            android:layout_width="match_parent"
                            android:orientation="horizontal"
                            >
                            <TextView
                                android:layout_width="0dp"
                                android:layout_weight="1"
                                android:textColor="@color/white"
                                android:textSize="@dimen/sp_24"
                                android:layout_marginRight="@dimen/dp_5"
                                android:layout_height="wrap_content"
                                android:text="序号"
                                />
                            <TextView
                                android:layout_width="0dp"
                                android:layout_weight="1"
                                android:textColor="@color/white"
                                android:textSize="@dimen/sp_24"
                                android:layout_marginRight="@dimen/dp_5"
                                android:layout_height="wrap_content"
                                android:text="环数"
                                />
                            <TextView
                                android:layout_width="0dp"
                                android:layout_weight="1"
                                android:textColor="@color/white"
                                android:textSize="@dimen/sp_24"
                                android:layout_marginRight="@dimen/dp_5"
                                android:layout_height="wrap_content"
                                android:text="偏移"
                                />
                            <TextView
                                android:layout_width="0dp"
                                android:layout_weight="1"
                                android:textColor="@color/white"
                                android:textSize="@dimen/sp_24"
                                android:layout_marginRight="@dimen/dp_5"
                                android:layout_height="wrap_content"
                                android:text="时间"
                                />
                        </android.support.v7.widget.LinearLayoutCompat>

                        <!--recyclerview-->

                        <android.support.v4.widget.SwipeRefreshLayout
                            android:layout_marginLeft="@dimen/dp_2"
                            android:layout_marginTop="@dimen/dp_2"
                            android:layout_marginBottom="@dimen/dp_2"
                            android:layout_marginRight="@dimen/dp_2"
                            android:id="@+id/srl_mark"
                            android:background="#ececec"
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="6"
                            >
                            <android.support.v7.widget.RecyclerView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:background="#ececec"
                                android:id="@+id/rv_mark"/>
                        </android.support.v4.widget.SwipeRefreshLayout>

                        <android.support.v7.widget.LinearLayoutCompat
                            android:layout_width="match_parent"
                            android:gravity="center"
                            android:layout_height="0dp"
                            android:layout_weight="2">


                        <android.support.v7.widget.AppCompatTextView
                            android:layout_width="@dimen/dp_100"
                            android:layout_height="@dimen/dp_100"
                            android:background="@drawable/bullet_back"

                            android:id="@+id/tv_current_ring_number"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:textSize="@dimen/sp_48"
                            android:textStyle="bold"

                            android:textColor="@color/lightgreen"
                            android:text="10"/>
                        </android.support.v7.widget.LinearLayoutCompat>
                        <android.support.v7.widget.LinearLayoutCompat
                            android:layout_width="match_parent"
                            android:gravity="center"
                            android:layout_marginTop="@dimen/dp_5"
                            android:layout_marginBottom="@dimen/dp_10"

                            android:layout_height="0dp"
                            android:layout_weight="1">
                            <Button
                                android:id="@+id/btn_finish_shooting"
                                android:text="射击完毕"

                                android:textStyle="bold"
                                android:textSize="@dimen/sp_34"
                                android:layout_gravity="center"
                                android:layout_width="wrap_content"
                                android:textColor="@color/white"
                                android:background="@drawable/btn_bg_red"
                                android:layout_height="wrap_content" />
                        </android.support.v7.widget.LinearLayoutCompat>

                    </android.support.v7.widget.LinearLayoutCompat>
            </android.support.v7.widget.LinearLayoutCompat>

        </android.support.v7.widget.LinearLayoutCompat>
    </android.support.v7.widget.LinearLayoutCompat>


</android.support.v7.widget.LinearLayoutCompat>
